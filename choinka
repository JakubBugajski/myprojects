#include <iostream>

using namespace std;

int main()
{
    int x;
    
    cout << "Podaj liczbe calkwoita: " << endl;
    cin >> x;
    
    for(int i=1; i<=x; i++)
    {
        for(int j=0; j<=x-i-1; j++)
    {
        cout << " ";
    }
        for(int k=1; k<=2*i-1; k++)
    {
        cout << "*";
    }
    
        cout << endl;
    }
    
    for(int y=1; y<=x-1; y++)
    {
        cout << " ";
    }
    
        cout << "#";
    
    return 0;
}
