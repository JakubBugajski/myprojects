#include <iostream>

using namespace std;

int main()
{
    int x;
    
    cout << "Podaj liczbe calkwoita: " << endl;
    cin >> x;
    
    for(int i=1; i<=x; i++)
    {
        cout << "*"; // gorna krawedz:
    }
    
        cout << endl;
    
    for(int j=1; j<=x-2; j++)
    {
        cout << "*";
    
    for(int y=1; y<=x-2; y++)
    {
        cout << " ";
    }
    
        cout << "*" << endl;
    }
    
    
    for(int k=1; k<=x; k++)
    {
        cout << "*"; // dolna krawedz:
    }

    return 0;
}
    
